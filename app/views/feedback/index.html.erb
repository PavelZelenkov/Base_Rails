<h1><%= t('.header') %></h1>

<div class="row">  
  <div class="col col-md-4">
    <%= form_with model: @feedback do |form| %>
      
      <div class="mb-3"> 
        <%= form.label t('.body'), class: 'form-label' %>
        <%= form.text_area :body, rows: 7, class: "form-control" %>
      </div>

      <%= form.submit t('.send'), class: "btn btn-primary" %> 
    <% end %>
  </div>
</div>
<br>

<%= link_to t('.back'), tests_path %>
