<div class="row">
  <div class="col col-md-12">
    <h1><%= t('.header' ,title: @test_passage.test.title) %></h1>

    <b>
    <% @test_passage.test.question_ids.each_with_index do |name, index| %>
      <% if "#{name}" == "#{@test_passage.current_question.id}" %>
        <%= t('.questions', index: index + 1, question_size: @test_passage.test.question_ids.size)%>
      <% end %>
    <% end %>
    </b><br>

    <b>
      <%= @test_passage.current_question.body %>
    </b>

    <%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
      <div class="form-check">
        <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :body, include_hidden: false do |b| %>
          <p>
            <%= b.check_box id: "answer_ids_#{b.object.id}", class: 'form-check-input' %>
            <%= b.label %>
          </p>
        <% end %>
      </div>

      <p><%= link_to 'Gist Question', gist_test_passage_path(@test_passage), method: :post %></p>
      <p><%= form.submit t('.next'), class: 'btn btn-primary' %></p>
    <% end %>
  </div>
</div>
