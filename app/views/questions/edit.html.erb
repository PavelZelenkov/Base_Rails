<h1><%= question_header(@question) %></h1>

<%= form_with model: @question do |form| %>
  <%= render 'shared/errors', resource: @question %>

  <p>
    <%= form.label :body %><br>
    <%= form.text_field :body %>
  </p>

  <p><%= form.submit %></p>
<% end %>

<%= link_to 'Back', test_path(@question.test) %>
