<div class="row">  
  <div class="col col-md-4">
    <h1><%= t('.header') %></h1>

    <p>
      <%= link_to t('.new_test'), new_admin_test_path %>
    </p>

    <%= render 'shared/errors', resource: @test %>

    <table>
      <thead>
        <tr>
          <th class="sort-by-title pointer">
            <%= t('.title') %>
            <%= octicon 'arrow-up', class: 'text-success hide' %>
            <%= octicon 'arrow-down', class: 'text-success hide' %>
          </th>
          <th class="text-center"><%= t('.level') %></th>
          <th class="text-center"><%= t('.number_of_question') %></th>
          <th colspan="3" class="text-center"><%= t('.action') %></th>
        </tr>
      </thead>

      <%= render @tests %>
    </table>

    <p>
      <%= link_to t('.all_gists'), admin_gists_path %>
    </p>

  </div>
</div>
