<div class="row">  
  <div class="col col-md-4">
    <h1><%= t('.header') %></h1>

    <p>
      <%= link_to t('.new_test'), new_admin_test_path %>
    </p>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th><%= t('.title') %></th>
          <th class="text-center"><%= t('.level') %></th>
          <th class="text-center"><%= t('.number_of_question') %></th>
          <th colspan="3" class="text-center"><%= t('.action') %></th>
        </tr>
      </thead>

      <tbody class="table-group-divider">
        <%= render @tests %>
      </tbody> 

    </table>
  </div>
</div>
