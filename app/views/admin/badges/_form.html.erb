<%= form_with(model:[:admin, @badge]) do |form| %>
  <%= render 'shared/errors', resource: @badge %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, id: :badge_name, class: "form-control" %>
  </p>

  <p>
    <%= form.label :image %>
    <%= form.text_field :img_url, id: :badge_image, class: "form-control"  %>
  </p>

  <p>
    <%= form.label :condition %>
    <%= form.collection_select :condition, Condition.all, :title, :title, {prompt: true}, {class: "form-select"} %>
  </p>

  <p>
    <%= form.label :condition_value %>
    <%= form.text_field :condition_value, id: :badge_condition_value, class: "form-control" %>
  </p>
  
  <p>
    <%= form.label :description %>
    <%= form.text_area :description, id: :badge_description, class: "form-control" %>
  </p>

  <p><%= form.submit class: 'btn btn-primary' %></p>

<% end %>
