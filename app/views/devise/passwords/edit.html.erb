<div class="row justify-content-center mt-3">
  <div class="col col-md-4">    
    <h2><%= t('.change_your_password') %></h2>

    <div class="card border-primary">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <div class="form-group">
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <p>
              <%= f.label :password, t('.new_password') %><br />
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> <%= t('.characters_minimum') %>)</em><br />
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
            </p>

            <p>
              <%= f.label :password_confirmation, t('.confirm_new_password') %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
            </p>

            <div class="actions">
              <%= f.submit t('.change_my_password'), class: 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mt-1">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
